FROM python:3.13-alpine

LABEL org.opencontainers.image.title="MCP Weather Server"
LABEL org.opencontainers.image.description="A Model Context Protocol (MCP) server that provides weather information."
LABEL org.opencontainers.image.documentation="README.md"
LABEL org.opencontainers.image.source="https://github.com/cmlccie/agentic"

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY weather_server.py .
RUN chmod +x weather_server.py

RUN adduser -D -s /bin/sh appuser
RUN chown -R appuser:appuser /app
USER appuser

# Expose port 8000 for HTTP transport (when using streamable-http mode)
EXPOSE 8000

ENTRYPOINT ["/app/weather_server.py"]
CMD ["stdio"]
