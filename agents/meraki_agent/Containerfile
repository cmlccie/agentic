FROM ghcr.io/cmlccie/agentic/python:latest

LABEL org.opencontainers.image.title="Meraki Agent"
LABEL org.opencontainers.image.description="A Pydantic AI agent that troubleshoots Meraki wireless client connectivity."
LABEL org.opencontainers.image.documentation="README.md"
LABEL org.opencontainers.image.source="https://github.com/cmlccie/agentic"

COPY meraki_agent.py system_prompt.md README.md ./
RUN chmod +x meraki_agent.py
RUN chown -R appuser:appuser /app
USER appuser

# Expose port 8000 for HTTP agent endpoints
EXPOSE 8000

ENTRYPOINT ["/app/meraki_agent.py"]
CMD ["openai-api"]
